# This is the project's root directory
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[mimetype]
insert_final_newline = false # will trigger validation errors if inserted

[*.bat]
end_of_line = crlf
